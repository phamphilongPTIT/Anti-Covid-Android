<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/idMaKBYT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã số KBYT: 1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idImg"
                android:layout_width="80dp"
                android:layout_height="55dp"
                android:src="@drawable/logo_byt" />
            <TextView
                android:id="@+id/idNoiDi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hà Nội  ->"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/idNoiDen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hải Dương"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/idNgayDi"
                android:layout_width="156dp"
                android:layout_height="62dp"
                android:layout_marginLeft="35dp"
                android:text="Ngày Đi: 20/10/2021"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/idNgayVe"
                android:layout_width="156dp"
                android:layout_height="62dp"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:text="Ngày Về: 13/10/2021"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>